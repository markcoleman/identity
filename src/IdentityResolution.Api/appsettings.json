{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityResolution": {
    "MatchingThreshold": 0.6,
    "AutoMergeThreshold": 0.97,
    "ReviewThreshold": 0.90,
    "EnableFuzzyMatching": true,
    "MaxResults": 10,
    "FieldWeights": {
      "FirstName": 0.2,
      "LastName": 0.25,
      "Email": 0.3,
      "Phone": 0.15,
      "DateOfBirth": 0.1
    }
  },
  "DataGovernance": {
    "AuditLogRetentionYears": 7,
    "GoldenProfileRetentionYears": -1,
    "ArchiveAfterDays": 365,
    "EnableEncryptionAtRest": true,
    "RequireAuditAuthorization": true,
    "SensitiveFields": [
      "SSN",
      "DateOfBirth",
      "Email",
      "Phone",
      "Address"
    ],
    "DataAdminRoles": [
      "DataAdmin",
      "ComplianceOfficer",
      "SystemAdmin"
    ]
  }
}